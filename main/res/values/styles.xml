<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BigButtonText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">42sp</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:color">@color/colorPrimary</item>
    </style>


    <!-- Menu slider styles -->
    <style name="MenuSliderEntry">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/menuText</item>
    </style>

    <style name="MenuSliderHeading" parent="@style/MenuSliderEntry">
        <item name="android:textColor">@color/menuHeader</item>
    </style>

    <style name="MenuSliderBar">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/menuUpper</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Activity">
        <item name="android:background">@color/mainBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Activity.BelowToolbar">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">8</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Styles used by the Home activity -->
    <style name="BasicButton.HomeButton">
        <item name="android:background">@drawable/home_button_background</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="BasicButton.HomeButton.Top">
        <item name="android:layout_marginTop">75dp</item>
    </style>

    <!-- Styles used exclusively by the calibration activity -->
    <style name="CalibrationRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="CalibrationRow.Top">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="CalibrationRow.Button">
        <item name="android:background">@drawable/home_button_background</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="CalibrationRow.Image">
        <item name="android:contentDescription">@string/c_smiley_desc</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- button styles -->

    <style name="BasicButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="BasicButtonBar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BasicButton.BarButton">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>


    <!-- Test activity styles -->
    <style name="TestOuterFrame">
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TestOuterOuterFrame">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TestImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BasicButton.TestButton">
        <item name="android:background">@drawable/test_rotate_button_bgd</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!-- familiarisation activities -->
    <style name="FamiliarisationCounter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
