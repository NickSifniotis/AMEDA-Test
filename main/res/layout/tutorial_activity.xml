<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Activity"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        style="@style/Activity.BelowToolbar" >

        <VideoView
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:id="@id/tut_videoview"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            style="@style/BasicButtonBar"
            android:layout_below="@id/tut_videoview">

            <Button
                style="@style/BasicButton.BarButton"
                android:background="@drawable/tutorial_btn_bgd2"
                android:text="@string/btn_done"
                android:onClick="tut_btn_done" />

            <Button
                style="@style/BasicButton.BarButton"
                android:background="@drawable/tutorial_btn_bgd2"
                android:text="@string/tut_btn_repeat"
                android:onClick="tut_btn_repeat"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>