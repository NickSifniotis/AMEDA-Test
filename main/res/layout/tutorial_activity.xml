<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackground">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="8">

        <TextView
            android:padding="20dp"
            android:id="@id/t_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/t_title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:padding="20dp"
            android:id="@id/t_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/t_description"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/t_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <VideoView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@id/t_videoview"
            android:layout_below="@id/t_description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="@string/btn_done"
            android:id="@+id/tute_done"
            android:onClick="t_btn_done"/>

        <Button
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tute_done"
            android:text="Repeat"
            android:onClick="t_btn_repeat"/>

    </RelativeLayout>
</LinearLayout>