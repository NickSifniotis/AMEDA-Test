<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_weight="8" >

        <TextView
            android:id="@+id/famil_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center_horizontal"
            android:text="@string/f_title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/famil_2"
            android:layout_below="@+id/famil_1"
            android:gravity="center_horizontal"
            android:paddingBottom="50dp"
            android:text="@string/f_description" />

        <LinearLayout
            android:id="@+id/famil_3"
            android:layout_below="@+id/famil_2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@id/f_btn_1"
                android:onClick="f_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="40dp"
                android:id="@id/f_txt_1"
                android:text="@string/f_initial_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/famil_4"
            android:layout_below="@+id/famil_3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@id/f_btn_2"
                android:onClick="f_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="40dp"
                android:id="@id/f_txt_2"
                android:text="@string/f_initial_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/famil_5"
            android:layout_below="@+id/famil_4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@id/f_btn_3"
                android:onClick="f_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="40dp"
                android:id="@id/f_txt_3"
                android:text="@string/f_initial_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/famil_6"
            android:layout_below="@+id/famil_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@id/f_btn_4"
                android:onClick="f_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="40dp"
                android:id="@id/f_txt_4"
                android:text="@string/f_initial_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/famil_7"
            android:layout_below="@+id/famil_6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@id/f_btn_5"
                android:onClick="f_btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="40dp"
                android:id="@id/f_txt_5"
                android:text="@string/f_initial_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:text="@string/btn_done"
            android:onClick="f_btn_done"
            android:layout_centerHorizontal="true"
            android:padding="30dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>