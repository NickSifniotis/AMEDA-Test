<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mainBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/c_row_calibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:onClick="c_btn_calibrate"
            android:text="@string/c_calibrate"
            android:id="@id/c_btn_calibrate" />

        <ImageView
            android:src="@drawable/c_smiley"
            android:contentDescription="@string/c_smiley_desc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@id/c_img_calibrate" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/c_row_position_1"
        android:layout_below="@id/c_row_calibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:onClick="c_btn_position_1"
            android:text="@string/position_1"
            android:id="@id/c_btn_position_1" />

        <ImageView
            android:src="@drawable/c_smiley"
            android:contentDescription="@string/c_smiley_desc"
            android:id="@id/c_img_position_1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@id/c_row_position_2"
        android:layout_below="@id/c_row_position_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:onClick="c_btn_position_2"
            android:text="@string/position_2"
            android:id="@id/c_btn_position_2" />

        <ImageView
            android:src="@drawable/c_smiley"
            android:contentDescription="@string/c_smiley_desc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@id/c_img_position_2" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/c_row_position_3"
        android:layout_below="@id/c_row_position_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:onClick="c_btn_position_3"
            android:text="@string/position_3"
            android:id="@id/c_btn_position_3" />

        <ImageView
            android:src="@drawable/c_smiley"
            android:contentDescription="@string/c_smiley_desc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@id/c_img_position_3" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/c_row_position_4"
        android:layout_below="@id/c_row_position_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:onClick="c_btn_position_4"
            android:text="@string/position_4"
            android:id="@id/c_btn_position_4" />


        <ImageView
            android:src="@drawable/c_smiley"
            android:contentDescription="@string/c_smiley_desc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@id/c_img_position_4" />

    </LinearLayout>


    <LinearLayout
        android:id="@id/c_row_position_5"
        android:layout_below="@id/c_row_position_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:onClick="c_btn_position_5"
            android:text="@string/position_5"
            android:id="@id/c_btn_position_5" />

        <ImageView
            android:src="@drawable/c_smiley"
            android:contentDescription="@string/c_smiley_desc"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@id/c_img_position_5" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@id/c_btn_done"
        android:text="@string/btn_done"
        android:onClick="c_btn_done"
        android:layout_below="@id/c_row_position_5"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>