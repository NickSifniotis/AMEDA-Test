<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/h_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/mainBackground"
            android:orientation="vertical"
            tools:context=".activities.HomeActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_weight="1">

                <ImageButton
                    android:contentDescription="@string/h_btn_tutorial"
                    android:background="@drawable/h_btn_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/h_btn_fore_tutorial"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:id="@id/h_btn_tutorial"
                    android:onClick="h_btn_tutorial"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_weight="1">

                <ImageButton
                    android:contentDescription="@string/h_btn_familiarisation"
                    android:background="@drawable/h_btn_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/h_btn_fore_familiarisation"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:id="@id/h_btn_familiarisation"
                    android:onClick="h_btn_familiarisation"
                    android:layout_centerInParent="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_height="0dp"
                android:layout_weight="1">


                <ImageButton
                    android:contentDescription="@string/h_btn_new_test"
                    android:background="@drawable/h_btn_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/h_btn_fore_begintest"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:id="@id/h_btn_begintest"
                    android:onClick="h_btn_begintest"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_gravity="start"
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/drawer_rel_id"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@color/menuUpper" >

                <ImageView
                    android:contentDescription="@string/ameda_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:paddingBottom="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ameda_logo" />

                <TextView
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/h_d_main"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:padding="7dp"
                android:background="@color/menuBackground">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/h_d_tutorial"
                    android:textColor="@color/mainBackground"
                    android:onClick="h_btn_tutorial" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/h_d_familiarisation"
                    android:textColor="@color/mainBackground"
                    android:onClick="h_btn_familiarisation" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/h_d_new"
                    android:textColor="@color/mainBackground"
                    android:onClick="h_d_new" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/h_d_open"
                    android:textColor="@color/mainBackground"
                    android:onClick="h_d_open" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menuUpper"/>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingTop="15dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/mainBackground"
                    android:text="@string/h_d_calibrate"
                    android:onClick="h_d_calibrate" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/mainBackground"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/h_d_help"
                    android:onClick="h_d_help" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/mainBackground"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/h_d_exit"
                    android:onClick="h_d_exit" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/menuUpper"/>

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/h_d_t_desc" />

                <TextView
                    android:id="@id/h_d_t_address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/mainBackground"
                    android:onClick="h_d_t_address" />

                <TextView
                    android:id="@id/h_d_t_debug"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/mainBackground"
                    android:onClick="h_d_t_debug" />

                <TextView
                    android:id="@id/h_d_t_shorttest"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/mainBackground"
                    android:onClick="h_d_t_shorttest" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>


