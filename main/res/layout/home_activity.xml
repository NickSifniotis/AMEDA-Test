<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@color/mainBackground"
            android:orientation="vertical"
            tools:context="au.net.nicksifniotis.amedatest.HomeActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/home_1"
                android:layout_alignParentTop="true"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_below="@+id/home_1"
                android:id="@+id/home_2"
                android:layout_weight="1">

                <ImageButton
                    android:background="@drawable/h_btn_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/h_btn_fore_tutorial"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:id="@id/h_btn_tutorial"
                    android:onClick="h_btn_tutorial"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_3"
                android:layout_below="@+id/home_2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/home_3"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:id="@+id/home_4"
                android:layout_weight="1">

                <ImageButton
                    android:background="@drawable/h_btn_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/h_btn_fore_familiarisation"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:id="@id/h_btn_familiarisation"
                    android:onClick="h_btn_familiarisation"
                    android:layout_centerInParent="true" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_5"
                android:layout_below="@+id/home_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/home_6"
                android:layout_below="@+id/home_5"
                android:layout_width="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_height="0dp"
                android:layout_weight="1">


                <ImageButton
                    android:background="@drawable/h_btn_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/h_btn_fore_begintest"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:id="@id/h_btn_begintest"
                    android:onClick="h_btn_begintest"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/home_6"
                android:id="@+id/home_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="left|start"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/drawer_rel_id"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@color/menuUpper" >

            <ImageView
                android:contentDescription="@string/ameda_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ameda_logo" />

            <TextView
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:padding="7dp"
            android:background="@color/menuBackground">

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/h_d_tutorial"
                android:textColor="@color/mainBackground"
                android:onClick="h_btn_tutorial" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/h_d_familiarisation"
                android:textColor="@color/mainBackground"
                android:onClick="h_btn_familiarisation" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/h_d_new"
                android:textColor="@color/mainBackground"
                android:onClick="h_d_new" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/h_d_open"
                android:textColor="@color/mainBackground"
                android:onClick="h_d_open" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/h_d_manage"
                android:textColor="@color/mainBackground"
                android:onClick="h_d_manage" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/mainBackground"
                android:text="@string/h_d_calibrate"
                android:onClick="h_d_calibrate" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/mainBackground"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/h_d_help"
                android:onClick="h_d_help" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Developer Options" />

            <TextView
                android:id="@+id/home_toggle_ameda"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/mainBackground"
                android:onClick="h_d_toggle_ameda" />

            <TextView
                android:id="@+id/home_toggle_debug"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/mainBackground"
                android:onClick="h_d_toggle_debug" />

        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>


